    ! Use a nice truetype font and size by default... 
	XTerm*dpi: 150
    xterm*faceName: Menlo
    xterm*faceSize: 10
	Xft.rgba: rgb
	Xft.antialias: 1
	Xft.autohint: 1
	XTerm*renderFont: true
	Xft.hintstyle: hintslight
	XTerm*allowBoldFonts: false
	XTerm*font:  	-misc-fixed-medium-r-normal--8-80-75-75-c-50-iso8859-1
    
    ! I like a LOT of scrollback...
    xterm*savelines: 500

    ! double-click to select whole URLs :D
    xterm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

!gruvbox dark
! hard contrast: *background: #1d2021
	xterm*background: #282828
! soft contrast: *background: #32302f
	xterm*foreground: #ebdbb2
! Black + DarkGrey
	xterm*color0:  #282828
	xterm*color8:  #928374
! DarkRed + Red
	xterm*color1:  #cc241d
	xterm*color9:  #fb4934
! DarkGreen + Green
	xterm*color2:  #98971a
	xterm*color10: #b8bb26
! DarkYellow + Yellow
	xterm*color3:  #d79921
	xterm*color11: #fabd2f
! DarkBlue + Blue
	xterm*color4:  #458588
	xterm*color12: #83a598
! DarkMagenta + Magenta
	xterm*color5:  #b16286
	xterm*color13: #d3869b
! DarkCyan + Cyan
	xterm*color6:  #689d6a
	xterm*color14: #8ec07c
! LightGrey + White
	xterm*color7:  #a89984
	xterm*color15: #ebdbb2	

    xterm*ScrollBar: false

    ! stop output to terminal from jumping down to bottom of scroll again
    xterm*scrollTtyOutput: false

